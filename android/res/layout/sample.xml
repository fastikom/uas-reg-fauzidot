<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/sample_travel_selector"
        android:gravity="center"
        android:padding="12dp"
        android:text="TRAVEL"
        android:textColor="@color/t1_title_text_color"
        android:textSize="27sp" />

     <TextView
         android:id="@+id/button2"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:background="@drawable/sample_art_selector"
         android:gravity="center"
         android:padding="12dp"
         android:text="ART"
         android:textColor="@color/t2_title_text_color"
         android:textSize="32sp" />

      <TextView
          android:id="@+id/button3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@drawable/sample_family_selector"
          android:gravity="center"
          android:padding="12dp"
          android:text="FAMILY"
          android:textColor="@color/t3_title_text_color"
          android:textSize="32sp" />

</LinearLayout>